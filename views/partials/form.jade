form(data-action-template='/api/v1' + method.URI, method=method.HTTPMethod, target='base').hidden
  if method.Synopsis
    div.synopsis=method.Synopsis

  table
    if method.parameters.length > 0
      tr.noHover
        th.name="name"
        th="value"
        th.description="description"
        th="location"
        th="type"
    each param in method.parameters
      if param.input != "textarea" && param.input!="checkbox" && !param.hidden
        if param.input=="select"
          include ./select
        else
          include ./input

    each param in method.parameters
      if param.input==="textarea" && !param.hidden
        include ./textarea

    each param in method.parameters
      if param.input==="checkbox" && !param.hidden
        include ./checkbox
    tr.noHover
      td
      td(colspan=3)
        input(type='submit', value='Try it')
        input.clear(type='button', value='clear results', disabled='true')

  div.results
    h4='URL'
    pre.uri
    h4='Headers'
    pre.headers
    h4='Status'
    pre.status
    div.output.pretty
      ul.json
        li
          a.pretty(href='#')='Body'
        li
          a.raw(href='#')='Raw'
      pre.pretty
      pre.raw
